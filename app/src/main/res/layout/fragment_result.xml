<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/primogem" />

                <TextView
                    android:id="@+id/result_cal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="已計算角色/武器/聖遺物"
                    android:textColor="@color/tv_color"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/barrier6"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="@color/tv_color" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_char_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/primogem" />

                <TextView
                    android:id="@+id/result_result_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="結算"
                    android:textColor="@color/tv_color"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/barrier7"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="@color/tv_color" />

            <TextView
                android:id="@+id/result_crystal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="寶石"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_crystal_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_boss_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="一般Boss跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_boss_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_weekboss_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="周本Boss跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_weekboss_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_local_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="特產"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_local_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_common_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="怪物跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />


            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_common_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_weeklybk1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="逢星期一,四,日副本跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_weeklybk1_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_weeklybk2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="逢星期二,五,日副本跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_weeklybk2_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_weeklybk3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="逢星期三,六,日副本跌落"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_weeklybk3_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/result_other_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="其他"
                android:textAlignment="center"
                android:textColor="@color/tv_color"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/result_other_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>