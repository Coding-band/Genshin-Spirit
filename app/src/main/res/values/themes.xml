<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="rareStar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_48</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="rareStar24" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_24</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="rareStar16" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_16</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="pb_2048" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/pb_2048</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- roundImageView -->
    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50px</item>
        <item name="color">@color/white</item>
    </style>

    <style name="NoTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">#05BBA9</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_dark_color</item>

    </style>

    <style name="NoThemeSipTik" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">#05BBA9</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_dark_color</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/page_bg</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:textColorPrimary">@color/tv_color</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_full</item>
        <item name="android:indeterminateDrawable">@drawable/star_empty</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/tv_color</item>
    </style>

    <style name="NormalDialogStyle_N">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/colorWhiteAlpha</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalFadeAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TutorialUI">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/colorWhiteAlpha</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalFadeAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NormalDialogStyle_D">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/colorWhiteAlpha</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalDialogAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="normalDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/normal_navi_down_enter</item>
        <item name="android:windowExitAnimation">@anim/normal_navi_down_exit</item>
    </style>

    <style name="normalFadeAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/page_bg</item>
        <item name="android:textColorPrimary">@color/tv_color</item>
        <item name="android:textColor">@color/tv_color</item>
    </style>

    <style name="NoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoTheme.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="NoTheme.AppWidgetContainer" parent="NoTheme.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>