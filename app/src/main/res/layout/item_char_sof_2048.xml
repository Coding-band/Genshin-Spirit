                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/genshin_font"
                android:gravity="center"
                android:text="@string/sof1"
                android:textAlignment="center"
                android:textColor="@color/dialog_desc_title_tv_color_2048"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/info_sof1_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/genshin_font"
                android:gravity="center"
                android:text="攻擊與施放技能時，有機率召喚火花轟擊敵人，造成相當於轟轟火花（大招單段）攻擊傷害120％的傷害。"
                android:textAlignment="viewStart"
                android:textColor="@color/tv_anti_color_2048"
                android:textSize="16sp" />


        </LinearLayout>

