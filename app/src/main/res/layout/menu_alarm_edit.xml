<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_less_edge"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/bg_less_edge_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alarm_ico"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="@string/edit_title"
            android:textColor="@color/tv_color"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarm_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="@string/edit_type"
            android:textColor="@color/tv_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/alarm_type_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/page_bg"
                android:popupBackground="@drawable/bg_less_edge"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/alarm_count_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:ems="3"
                android:hint="請輸入目前數目"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/tv_color"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_custom_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_time_picker_ask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/edit_time"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alarm_time_picker"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="2021/08/20 14:17:00"
                android:textColor="@color/tv_color"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_jb_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_jb_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/edit_time"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/alarm_jb_time_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:background="@color/page_bg"
                android:popupBackground="@drawable/bg_less_edge"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_ph_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_ph_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/edit_ph_time"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/alarm_ph_time_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:background="@color/page_bg"
                android:popupBackground="@drawable/bg_less_edge"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_dtbc_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alarm_time_coin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/edit_adeptal_energy"
                    android:textColor="@color/tv_color"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/alarm_coin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/page_bg"
                    android:popupBackground="@drawable/bg_less_edge"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alarm_time_coin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/edit_trust_rank"
                    android:textColor="@color/tv_color"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/alarm_coin_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/page_bg"
                    android:popupBackground="@drawable/bg_less_edge"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/edit_title_notif"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alarm_title_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="請輸入標題"
                android:singleLine="true"
                android:textColor="@color/tv_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/edit_info_notif"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alarm_info_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="請輸入標題"
                android:singleLine="true"
                android:textColor="@color/tv_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/alarm_25_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/edit_cd_25off"
                android:textColor="@color/tv_color" />

            <Switch
                android:id="@+id/alarm_use_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/edit_use_notif"
                android:textColor="@color/tv_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alarm_cancel"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_border"
                android:text="@android:string/cancel"
                android:textColor="@color/theme_color" />

            <Button
                android:id="@+id/alarm_delete"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_cancel_colorful"
                android:text="@string/delete"
                android:textColor="@color/tv_color" />

            <Button
                android:id="@+id/alarm_ok"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_border_colorful"
                android:text="@android:string/ok"
                android:textColor="@color/tv_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>