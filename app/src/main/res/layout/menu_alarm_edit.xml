<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_less_edge"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/bg_less_edge_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alarm_ico"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="編輯提醒"
            android:textColor="@color/tv_color"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarm_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="提醒的類別"
            android:textColor="@color/tv_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarm_type_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/page_bg"
                android:popupBackground="@drawable/bg_less_edge" />

            <EditText
                android:id="@+id/alarm_count_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="3"
                android:hint="請輸入目前數目"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/tv_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="提醒的標題"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alarm_title_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="請輸入標題"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="提醒的內容"
                android:textColor="@color/tv_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alarm_info_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="請輸入標題"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/alarm_use_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checked="true"
            android:text="使用此通知"
            android:textColor="@color/tv_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alarm_cancel"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_border"
                android:text="@android:string/cancel"
                android:textColor="@color/teal_200" />

            <Button
                android:id="@+id/alarm_ok"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_border_colorful"
                android:text="確定"
                android:textColor="@color/tv_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>