<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_kwang_filter"
        android:orientation="vertical"
        android:padding="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/menu_title_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:background="@drawable/bg_dialog_header_edge"
                android:fontFamily="@font/genshin_font"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filters"
                android:textColor="@color/tv_spinner_color_2048"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/menu_cancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:textColor="@color/theme_color"
                app:srcCompat="@drawable/ic_2048_close_btn" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_body_solid"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_elements_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/elements"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_elements_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pyro_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/pyro_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/hydro_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/hydro_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/anemo_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/anemo_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/electro_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/electro_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dendor_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/dendro_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cryo_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/cryo_ico" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/geo_ico"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="false"
                            app:srcCompat="@drawable/geo_ico" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/menu_weapons_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/title_weapons"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_weapons_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ico_sword"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ico_sword" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ico_claymore"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ico_claymore" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ico_polearm"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ico_polearm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ico_bow"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ico_bow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ico_catalyst"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ico_catalyst" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/menu_rarity_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/rarity"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_rarity_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/menu_rare5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_2048_checkbox_bg"
                        android:button="@drawable/item_2048_checkbox"
                        android:clickable="true"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:text="★5"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/tv_cb_unselected_2048"
                        android:textSize="14sp"
                        app:buttonTint="@null"
                        app:useMaterialThemeColors="false" />

                    <CheckBox
                        android:id="@+id/menu_rare4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_2048_checkbox_bg"
                        android:button="@drawable/item_2048_checkbox"
                        android:checked="false"
                        android:clickable="true"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:text="★4"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/tv_cb_unselected_2048"
                        android:textSize="14sp"
                        app:buttonTint="@null"
                        app:useMaterialThemeColors="false" />

                </LinearLayout>

                <RatingBar
                    android:id="@+id/menu_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_bar"
                    android:rating="0"
                    android:stepSize="1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/menu_release_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/release_state"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_realease_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/menu_release_0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_2048_checkbox_bg"
                        android:button="@drawable/item_2048_checkbox"
                        android:checked="false"
                        android:clickable="true"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:text="@string/released"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/tv_cb_unselected_2048"
                        android:textSize="14sp"
                        app:buttonTint="@null"
                        app:useMaterialThemeColors="false" />

                    <CheckBox
                        android:id="@+id/menu_release_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_2048_checkbox_bg"
                        android:button="@drawable/item_2048_checkbox"
                        android:checked="false"
                        android:clickable="true"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:singleLine="true"
                        android:text="@string/unreleased"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/tv_cb_unselected_2048"
                        android:textSize="14sp"
                        app:buttonTint="@null"
                        app:useMaterialThemeColors="false" />

                </LinearLayout>

                <TextView
                    android:id="@+id/menu_role_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/char_role"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/menu_role_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/menu_role_sub_dps"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/item_2048_checkbox_bg"
                            android:button="@drawable/item_2048_checkbox"
                            android:checked="false"
                            android:clickable="true"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:singleLine="true"
                            android:text="@string/support_dps"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/tv_cb_unselected_2048"
                            android:textSize="14sp"
                            app:buttonTint="@null"
                            app:useMaterialThemeColors="false" />

                        <CheckBox
                            android:id="@+id/menu_role_dps"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:background="@drawable/item_2048_checkbox_bg"
                            android:button="@drawable/item_2048_checkbox"
                            android:checked="false"
                            android:clickable="true"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:singleLine="true"
                            android:text="@string/main_dps"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/tv_cb_unselected_2048"
                            android:textSize="14sp"
                            app:buttonTint="@null"
                            app:useMaterialThemeColors="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/menu_role_utility"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/item_2048_checkbox_bg"
                            android:button="@drawable/item_2048_checkbox"
                            android:checked="false"
                            android:clickable="true"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:singleLine="true"
                            android:text="@string/utility"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/tv_cb_unselected_2048"
                            android:textSize="14sp"
                            app:buttonTint="@null"
                            app:useMaterialThemeColors="false" />

                        <CheckBox
                            android:id="@+id/menu_role_utility2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:background="@drawable/item_2048_checkbox_bg"
                            android:button="@drawable/item_2048_checkbox"
                            android:checked="false"
                            android:clickable="true"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:paddingLeft="16dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:singleLine="true"
                            android:text="@string/utility"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/tv_spinner_color_2048"
                            android:textSize="14sp"
                            android:visibility="invisible"
                            app:buttonTint="@null"
                            app:useMaterialThemeColors="false" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_body_edge"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp">

            <FrameLayout
                android:id="@+id/menu_reset"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_btn"
                android:text="@string/cal_reset">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_2048_cancel_btn_ico" />

                <TextView
                    android:id="@+id/menu_reset_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:text="@string/cal_reset"
                    android:textColor="@color/tv_anti_color_2048"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/menu_ok"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_btn"
                android:text="@android:string/ok">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_2048_ok_btn_ico" />

                <TextView
                    android:id="@+id/menu_ok_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:text="@android:string/ok"
                    android:textColor="@color/tv_anti_color_2048"
                    android:textSize="18sp" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>