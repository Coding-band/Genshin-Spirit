<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buff_item_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_item_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="5"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center|left"
            android:text="一段傷害"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/buff_item_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center"
            android:text="36.74%" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_uncrit_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/buff_uncrit_value"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center"
            android:text="959" />

        <TextView
            android:id="@+id/buff_uncrit_name"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_weight="5"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center|left"
            android:text="@string/buff_uncrit_dmg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_crit_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/buff_crit_value"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center"
            android:text="5,433" />

        <TextView
            android:id="@+id/buff_crit_name"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_weight="5"
            android:fontFamily="@font/jf_openhuninn"
            android:gravity="center|left"
            android:text="@string/buff_crited_dmg" />

    </LinearLayout>

</LinearLayout>