                                            android:layout_height="28dp"
                                            android:layout_marginLeft="1dp"
                                            android:layout_marginRight="1dp"
                                            android:fontFamily="@font/genshin_font"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/tv_color_ex"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/memo_item1_max"
                                            android:layout_width="wrap_content"
                                            android:layout_height="28dp"
                                            android:layout_marginLeft="1dp"
                                            android:layout_marginRight="1dp"
                                            android:fontFamily="@font/genshin_font"
                                            android:gravity="center"
                                            android:text="/160"
                                            android:textColor="@color/tv_color_less"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/memo_item1_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="12dp"
                                        android:layout_marginRight="1dp"
                                        android:fontFamily="@font/genshin_font"
                                        android:text="@string/unknown"
                                        android:textColor="@color/tv_color_less"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/tv_anti_color"
                            android:gravity="center"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/memo_resin_tv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/genshin_font"
                                android:text="@string/alarm_t3"
