<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/buff_artifact_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/page_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/rarity"
                android:visibility="gone" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:checkedButton="@id/buff_artifact_4up5"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/buff_artifact_4up1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_4up2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_4up3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_4up4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_4up5"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_kwang_light"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="@string/weapon_stat_CritRateP"
                    android:textColor="@color/tv_color" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_kwang_light"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:text="0.0%"
                    android:textColor="@color/tv_color"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/jf_openhuninn"
                android:text="Upgrade times : "
                android:visibility="visible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:checkedButton="@id/buff_artifact_4up5"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/buff_artifact_1t"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_2t"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_3t"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />

                <RadioButton
                    android:id="@+id/buff_artifact_4t"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jf_openhuninn"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/tv_color" />
            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>