<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/menu_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:background="@drawable/bg_dialog_header_edge"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/filters"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/menu_cancel"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0"
                    android:textColor="@color/theme_color"
                    app:srcCompat="@drawable/ic_2048_close_btn" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_body_edge"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_elements_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:text="DiceType"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_elements_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/pyro_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_pyro" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/hydro_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_hydro" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/anemo_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_anemo" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/electro_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_electro" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/dendor_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_dendro" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cryo_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_cryo" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/geo_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_geo" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/spec_ico"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_specific" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rand_ico"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cryo_ico3"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin="4dp"
                                android:adjustViewBounds="false"
                                app:srcCompat="@drawable/bg_tcg_dice_random" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/menu_weapons_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:text="SubType"
                    android:textColor="@color/tv_spinner_color_2048"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/menu_weapons_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="蒙德" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:checked="true"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="璃月" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="稻妻" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="須彌" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="愚人眾" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="魔物" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="天賦" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="武器" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="聖遺物" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="場地" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="夥伴" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="道具" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="元素共鳴" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="特殊牌" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="料理" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center"
                            android:text="卡背" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/menu_reset"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog_btn"
                        android:text="@string/cal_reset">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="8dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_2048_cancel_btn_ico" />

                        <TextView
                            android:id="@+id/menu_reset_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center|left"
                            android:text="@string/cal_reset"
                            android:textColor="@color/tv_anti_color_2048"
                            android:textSize="18sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/menu_ok"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog_btn"
                        android:text="@android:string/ok">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="8dp"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/ic_2048_ok_btn_ico" />

                        <TextView
                            android:id="@+id/menu_ok_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/genshin_font"
                            android:gravity="center|left"
                            android:text="@android:string/ok"
                            android:textColor="@color/tv_anti_color_2048"
                            android:textSize="18sp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>