<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_filter_ico"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_filter_alt_24" />

        <TextView
            android:id="@+id/menu_title_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:gravity="center|left"
            android:text="@string/filters"
            android:textColor="@color/tv_color"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/menu_elements_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="@string/elements"
        android:textColor="@color/tv_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pyro_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/pyro_ico" />

        <ImageView
            android:id="@+id/hydro_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/hydro_ico" />

        <ImageView
            android:id="@+id/anemo_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/anemo_ico" />

        <ImageView
            android:id="@+id/electro_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/electro_ico" />

        <ImageView
            android:id="@+id/dendor_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/dendro_ico" />

        <ImageView
            android:id="@+id/cryo_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/cryo_ico" />

        <ImageView
            android:id="@+id/geo_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/geo_ico" />
    </LinearLayout>

    <TextView
        android:id="@+id/menu_weapons_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="@string/title_weapons"
        android:textColor="@color/tv_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ico_sword"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:tint="@color/tv_color"
            app:srcCompat="@drawable/ico_sword" />

        <ImageView
            android:id="@+id/ico_claymore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:tint="@color/tv_color"
            app:srcCompat="@drawable/ico_claymore" />

        <ImageView
            android:id="@+id/ico_polearm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:tint="@color/tv_color"
            app:srcCompat="@drawable/ico_polearm" />

        <ImageView
            android:id="@+id/ico_bow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:tint="@color/tv_color"
            app:srcCompat="@drawable/ico_bow" />

        <ImageView
            android:id="@+id/ico_catalyst"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:tint="@color/tv_color"
            app:srcCompat="@drawable/ico_catalyst" />
    </LinearLayout>

    <TextView
        android:id="@+id/menu_rarity_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="@string/rarity"
        android:textColor="@color/tv_color"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/menu_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:isIndicator="false"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_bar"
        android:rating="0"
        android:stepSize="1" />

    <TextView
        android:id="@+id/menu_role_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="@string/char_role"
        android:textColor="@color/tv_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/menu_role_dps"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_dps"
            android:textAlignment="center"
            android:textColor="@color/dps"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/menu_role_sub_dps"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/support_dps"
            android:textAlignment="center"
            android:textColor="@color/sub_dps"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/menu_role_utility"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/utility"
            android:textAlignment="center"
            android:textColor="@color/util"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_cancel"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border"
            android:text="@android:string/cancel"
            android:textColor="@color/theme_color" />

        <Button
            android:id="@+id/menu_reset"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border"
            android:text="@string/cal_reset"
            android:textColor="@color/theme_color" />

        <Button
            android:id="@+id/menu_ok"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border_colorful"
            android:text="@android:string/ok"
            android:textColor="@color/tv_color" />
    </LinearLayout>

</LinearLayout>