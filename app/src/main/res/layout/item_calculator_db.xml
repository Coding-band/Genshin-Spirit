<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/db_sheet_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selected_circle_effect"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/db_sheet_ico"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_baseline_calculate_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/db_sheet_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="七七" />

        <TextView
            android:id="@+id/db_sheet_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="角色：1 / 武器：0 / 聖遺物：0" />
    </LinearLayout>
</LinearLayout>