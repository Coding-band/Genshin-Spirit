                            app:srcCompat="@drawable/hu_tao_unknown" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/memo_expe2_time"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:text="@string/unknown"
                        android:textColor="@color/tv_color_less"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/memo_expe2_tick"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_2048_need_tick" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/memo_expe3_ico"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:padding="6dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/hu_tao_unknown" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/memo_expe3_time"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/genshin_font"
                        android:gravity="center"
                        android:text="@string/unknown"
                        android:textColor="@color/tv_color_less"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/memo_expe3_tick"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_2048_need_tick" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
