<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/buff_dmg_art_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:padding="4dp"
            app:srcCompat="@drawable/art2" />

        <TextView
            android:id="@+id/buff_dmg_art_lvl"
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/barrier"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/buff_tv_main_anti_2048"
            android:textSize="10sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buff_dmg_art_main_ico"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_buff_hp_2048" />

            <TextView
                android:id="@+id/buff_dmg_art_main_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/genshin_font"
                android:text="+ 4780"
                android:textColor="@color/buff_tv_main_2048" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buff_dmg_art_sub1_ico"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_buff_crit_rate_2048" />

                <TextView
                    android:id="@+id/buff_dmg_art_sub1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/genshin_font"
                    android:text="+ 6.2%"
                    android:textColor="@color/buff_tv_main_2048"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buff_dmg_art_sub2_ico"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_buff_crit_dmg_2048" />

                <TextView
                    android:id="@+id/buff_dmg_art_sub2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/genshin_font"
                    android:text="+ 6.2%"
                    android:textColor="@color/buff_tv_main_2048"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buff_dmg_art_sub3_ico"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_buff_hp_2048" />

                <TextView
                    android:id="@+id/buff_dmg_art_sub3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/genshin_font"
                    android:text="+ 6.2%"
                    android:textColor="@color/buff_tv_main_2048"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buff_dmg_art_sub4_ico"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_buff_hp_2048" />

                <TextView
                    android:id="@+id/buff_dmg_art_sub4_value"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/genshin_font"
                    android:text="+ 6.2%"
                    android:textColor="@color/buff_tv_main_2048"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>