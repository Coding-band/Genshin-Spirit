<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buff_artifact_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_kwang_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_artifact_main_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/buff_artifact_main_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/buff_artifact_main_name_sp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:text="@string/weapon_stat_HP"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_artifact_sec1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_kwang_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_artifact_sec1_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="0.0%" />

        <TextView
            android:id="@+id/buff_artifact_sec1_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_artifact_sec2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_kwang_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_artifact_sec2_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="0.0%" />

        <TextView
            android:id="@+id/buff_artifact_sec2_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_artifact_sec3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_kwang_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_artifact_sec3_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="0.0%" />

        <TextView
            android:id="@+id/buff_artifact_sec3_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buff_artifact_sec4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_kwang_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buff_artifact_sec4_value"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/genshin_font"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/buff_artifact_sec4_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:fontFamily="@font/genshin_font"
            android:gravity="center|left"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>