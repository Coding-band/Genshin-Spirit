<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:text="@string/buff_calcluator"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/genshin_font"
                    android:text="Design By SipTik#1171"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/blank1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="8dp"
                android:background="@color/color_theme_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="1. Character"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info1"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="2. Weapon"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info2"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/siptik_art_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="3. Artifacts"
                    android:textColor="@color/tv_color"
                    android:textSize="18sp"
                    android:thumbTint="@color/color_theme_2"
                    android:trackTint="@color/color_theme_2" />

                <ImageView
                    android:id="@+id/siptik_info3"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="4. Artifacts Stat"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info4"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="5. Teammate Buff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info5"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="6. Enemy"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info6"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <include
                layout="@layout/item_siptik_buff_part6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/genshin_font"
                    android:gravity="center"
                    android:text="7. Result"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/siptik_info7"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_baseline_info_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/siptik_tab_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>