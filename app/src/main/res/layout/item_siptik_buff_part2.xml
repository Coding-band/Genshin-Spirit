<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/siptik_weapon_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/siptik_weapon_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/genshin_font"
                android:gravity="center"
                android:singleLine="false"
                android:text="N/A"
                android:textAlignment="center"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/blank"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/color_theme_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/siptik_weapon_lvl_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/genshin_font"
                        android:singleLine="true"
                        android:text="Weapon Lvl" />

                    <Button
                        android:id="@+id/siptik_weapon_lvl_btn"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_square_border_num"
                        android:fontFamily="@font/genshin_font"
                        android:text="90"
                        android:textColor="@color/tv_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/siptik_weapon_lvl_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/genshin_font"
                        android:singleLine="true"
                        android:text="Refine Lvl" />

                    <Button
                        android:id="@+id/siptik_refine_lvl_btn"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_square_border_num"
                        android:fontFamily="@font/genshin_font"
                        android:text="5"
                        android:textColor="@color/tv_color" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>