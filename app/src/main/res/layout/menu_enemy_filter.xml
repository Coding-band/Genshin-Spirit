<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_filter_ico"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_baseline_filter_alt_24" />

        <TextView
            android:id="@+id/menu_title_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:gravity="center|left"
            android:text="@string/filters"
            android:textColor="@color/tv_color"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/menu_rarity_title_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="left|center_vertical|center_horizontal|center"
        android:paddingLeft="16dp"
        android:text="請選擇敵人種類"
        android:textColor="@color/tv_color"
        android:textSize="16sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/enemy_cb1"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="史萊姆"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb2"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="無相Boss"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb3"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="飄浮靈"
                android:textColor="@color/tv_color" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/enemy_cb4"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="丘丘人"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb5"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="深淵"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb6"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="獸境"
                android:textColor="@color/tv_color" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/enemy_cb7"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="愚人眾"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb8"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="遺蹟"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb9"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="盜寶團"
                android:textColor="@color/tv_color" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/enemy_cb10"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="其他人類派系"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb11"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="騙騙花"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb12"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="龍蜥"
                android:textColor="@color/tv_color" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/enemy_cb13"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="螢,幻形"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb14"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="世界Boss"
                android:textColor="@color/tv_color" />

            <CheckBox
                android:id="@+id/enemy_cb15"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="周本Boss"
                android:textColor="@color/tv_color" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_cancel"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border"
            android:text="@android:string/cancel"
            android:textColor="@color/theme_color" />

        <Button
            android:id="@+id/menu_reset"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border"
            android:text="@string/cal_reset"
            android:textColor="@color/theme_color" />

        <Button
            android:id="@+id/menu_ok"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:layout_weight="0"
            android:background="@drawable/bg_square_border_colorful"
            android:text="@android:string/ok"
            android:textColor="@color/tv_color" />
    </LinearLayout>

</LinearLayout>